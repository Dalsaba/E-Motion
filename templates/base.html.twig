{% set accueil_url = url('app_default')|trim('/') %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta property="title" content="E-Motion">
        <meta name="description" content="Hello world!">
        <meta name="keywords" content="E-Motion, location, véhicule, électrique, voiture, scooter" />
        <meta property="og:site_name" content="E-Motion">
        <meta property="og:locale" content="fr_FR">
        <meta property="og:type" content="website" />
        <title>{% block title %}E-Motion{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="height: 100%" >
        <header class="bg-orange-500 h-32 flex items-center justify-center">
            <nav class="">
                <ul class="flex gap-x-6">
                    <li><a href="{{ path('app_default') }}" class="text-blue-600 hover:text-blue-500">Accueil</a></li>
                    <li><a href="{{ path('app_espace_client') }}" class="text-blue-600 hover:text-blue-500">Espace client</a></li>
                </ul>
            </nav>

            {% for type, messages in app.flashes %}
                {% for m in messages %}
                    <p class="py-3 px-5 border border-solid border-transparent rounded {{ type }}">{{ m }}</p>
                {% endfor %}
            {% endfor %}
        </header>
        <div class="bg-orange-500/50 grid justify-items-center">
            <p class="text-white">{{ controller_name }}</p>
        </div>

        <main class="grid justify-items-center w-full">
            {% block body %}{% endblock %}
        </main>

        {% block footer %}
            {{ include('components/_footer.html.twig') }}
        {% endblock %}

    </body>

</html>