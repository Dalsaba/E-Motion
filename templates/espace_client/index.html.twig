{% extends 'base.html.twig' %}
{% block title %}Espace client | E-Motion{% endblock %}

{% block body %}
<div>
    {% if app.user %}
    <b><h1>Espace Client</h1></b>
    <b><h2>Information personnel</h2></b>
    <p>Nom: {{app.user.nom}}</p>
    <p>Prénom: {{app.user.prenom}}</p>
    <p>Email: {{app.user.email}}</p>
    <p>Adresse: {{app.user.adresse}}</p>
    <p>Telephone: {{app.user.telephone}}</p>
    <b><h2>Action possible</h2></b>
    <a class="hover:text-blue-800" href="{{path('app_modif_info', {id: app.user.id})}}"><li>Modifier informations personnelles</li></a>
    <b><h1>Espace Propriétaire</h1></b>
    <p>Veuillez ajouter un véhicule pour pouvoir le mettre en location</p>
    <a class="hover:text-blue-800" href="{{path('app_ajout_vehicule',{id: app.user.id})}}"><li>Ajouter un véhicule</li></a>
    <a class="hover:text-blue-800" href="{{path('app_mes_vehicules',{id: app.user.id})}}"><li>Mes véhicules</li></a>
    {% else %}
        <a class="hover:text-blue-800" href="{{path('app_connexion_client')}}"><h1>Veuillez vous connecter avant</h1></a>
    {% endif %}
</div>
{% endblock %}
